<div class="row">
  <div class="col-md-12">
    <div class="pull-right" style="padding-bottom: 10px;">
      <%= link_to( "送出訂單(結帳)","#", class: "btn btn-success")%>
    </div>
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th>飲料名稱</th>
          <th>價格(中)</th>
          <th>價格(大)</th>
          <th>選購</th>
        </tr>
      </thead>
      <% @products.each do |product| %>
      <tbody>
        <tr>
          <th><%= product.name %></th>
          <th><%= product.price_grande %></th>
          <th><%= product.price_venti %></th>
          <th><%= link_to("選擇", checkout_products_path(proid: product.id),method: :post, remote: true,  class: "btn btn-info") %></th>
        </tr>
      </tbody>
      <% end %>
    </table>
  </div>
</div>
<div id="product-modal" class="modal fade"></div>
