<div class="row">
  <div class="col-md-12">
    <h2> 確認飲料訂單 </h2>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>飲料名稱</th>
          <th>大杯數量</th>
          <th>中杯數量</th>
        </tr>
      </thead>
      <tbody>
        <% current_cart.cart_items.each do |items| %>
          <tr>
            <td>
              <%= items.product.name%>
            </td>
            <td>
              <%= items.venti_quantity %>
            </td>
            <td>
              <%= items.grande_quantity %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <br>
    <div class="total clearfix">
      <span class="pull-right">
         <span> 總計 <%= render_cart_total_price(current_cart) %> NTD  </span>
      </span>
    </div>
    <hr>
    <div class="checkout clearfix">
      <%= link_to("確認結賬", orders_path, method: :post, class: "btn btn-lg btn-danger pull-right") %>
    </div>
  </div>
</div>
